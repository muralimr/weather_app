<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header text-center">
      <h1>ğŸŒ¦ Weather Forecast</h1>
    </div>

    <div class="card-body">
      <%= form_with url: "/forecast", method: :post, local: true, class: "row g-3 align-items-end" do |f| %>
        <div class="col-md-4">
          <%= label_tag :zip, "Enter ZIP Code", class: "form-label" %>
          <%= text_field_tag :zip, params[:zip], class: "form-control", required: true %>
        </div>

        <div class="col-md-4">
          <%= label_tag :country_code, "Select Country", class: "form-label" %>
          <%= select_tag :country_code, options_for_select(['us', 'in'], params[:country_code]), class: "form-select" %>
        </div>

        <div class="col-md-4">
          <%= submit_tag "Get Forecast", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @weather && @weather['main'] %>
    <div class="card mt-4">
      <div class="card-body">
        <h4 class="card-title">Weather in <%= @city %></h4>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">ğŸŒ¡ Temperature: <%= (@weather['main']['temp'] - 273.15).round(1) %> Â°C</li>
          <li class="list-group-item">ğŸ’§ Humidity: <%= @weather['main']['humidity'] %>%</li>
          <li class="list-group-item">ğŸŒ¡ Min: <%= (@weather['main']['temp_min'] - 273.15).round(1) %> Â°C</li>
          <li class="list-group-item">ğŸŒ¡ Max: <%= (@weather['main']['temp_max'] - 273.15).round(1) %> Â°C</li>
          <li class="list-group-item">ğŸ“ Location: <%= @weather['name'] %></li>
          <li class="list-group-item">ğŸŒ¤ Condition: <%= @weather["weather"][0]["main"] %></li>
          <li class="list-group-item">ğŸ’¨ Wind Speed: <%= (@weather['wind']['speed'] * 3.6).round(1) %> km/h</li>
        </ul>
      </div>
    </div>
  <% end %>
</div>